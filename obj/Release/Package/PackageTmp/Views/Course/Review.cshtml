@model List<HEMUdaan.Models.QuestionReview>

@{
    Layout = "~/Views/Shared/_UdaanLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Review</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Review Summary</h1>

        <div class="mb-3">
            <p><strong>Total Correct Questions:</strong> @ViewBag.CorrectQuestions</p>
            <p><strong>Total Incorrect Questions:</strong> @ViewBag.IncorrectQuestions</p>
            <p><strong>Total Points:</strong> @ViewBag.TotalPoints</p>
        </div>

        <h2 class="mt-4">Review Details</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Question</th>
                        <th>Correct Answer</th>
                        <th>Selected Answer</th>
                        <th>Correct/Incorrect</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.QuestionText</td>
                            <td>@review.CorrectAnswer</td>
                            <td>@review.SelectedAnswer</td>
                            <td>@(review.IsCorrect ? "Correct" : "Incorrect")</td>
                            <td>@review.Points</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <button id="dashBtn" class="btn btn-primary">Back to Dashboard</button>
        </div>
    </div>

    <script>
        document.getElementById('dashBtn').addEventListener('click', function () {
            window.location.href = '/User/Index?UserID=@ViewBag.userId';
        });
    </script>
</body>
</html>
