    <script>
        function Health() {
        // Curiosity function implementation
        debugger;
        // Display a SweetAlert message
        Swal.fire({
            title: "Note:",
            text: "Submit the Project Suggested by HEMA Foundation \nOR \nYou may Upload your own made projects related to this particular value",
            timer: 4000, // Timeout in milliseconds
            buttons: false // Hide the "OK" button
        });

        // Make an AJAX request
        $.ajax({
            url: '/Volunteer/ValueCheck',
            type: "POST",
            data: {
                CID: '@ViewBag.HMCID',
                userId: '@ViewBag.UserID' // Corrected data format
            },
            success: function (response) {
                if (response[0] === "1") {
                    // If response[0] is "1", redirect to a page after a delay
                    setTimeout(function () {
                        window.location = '/volunteer/Creativity?CID=' + encodeURIComponent('@ViewBag.HMCID') + '&UserID=' + encodeURIComponent('@ViewBag.UserID'); // Concatenate CID and UserID in the URL
                    }, 2000);
                } else {
                    // If response[0] is not "1", display a message and reload the page after a delay
                    Swal.fire("Note:", "You have Already Submitted Value");
                    setTimeout(function () {
                        location.reload();
                    }, 2000);
                }
            },
            error: function (response) {
                alert("Error: " + JSON.stringify(response));
            }
        });
    }

