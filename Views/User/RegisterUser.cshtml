
@model HEMUdaan.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        max-width: 1000px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-row {
        margin-bottom: 15px;
        display: flex;
        flex-wrap: wrap; /* Allow items to wrap to the next line */
        align-items: center;
    }

        .form-row label {
            flex: 1;
            text-align: right;
            margin-right: 15px;
        }

        .form-row input[type="text"],
        .form-row select {
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
            margin-bottom: 10px; /* Add some space between inputs */
            width: 211px;
            margin: 0px 0px 0px 65px;
        }

            .form-row input[type="text"]:focus,
            .form-row select:focus {
                outline: none;
                border-color: #007bff;
            }

        .form-row input[type="submit"] {
            flex: 1;
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px; /* Add some space above the button */
        }

            .form-row input[type="submit"]:hover {
                background-color: #0056b3;
            }

    p {
        text-align: center;
        margin-top: 15px;
    }

        p a {
            color: #007bff;
            text-decoration: none;
        }

            p a:hover {
                text-decoration: underline;
            }

    .error-message {
        color: red; /* Set the color to red */
        margin-top: 5px; /* Adjust the top margin to create space between the input and the error message */
    }

    /* Media query for smaller screens */
    @@media screen and (max-width: 768px) {
        .form-row label {
            text-align: left; /* Align labels to the left on smaller screens */
            margin-right: 0; /* Remove right margin */
            margin-bottom: 5px; /* Add some space between labels */
        }

        .form-row input[type="text"],
        .form-row select {
            flex: 100%; /* Make inputs full width */
            margin-right: 0; /* Remove right margin */
        }

        .form-row input[type="submit"] {
            flex: 100%; /* Make button full width */
        }
    }

    label {
        margin: 10px; /* Adjust as needed */
    }

    select {
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .form-row textarea {
        padding: 8px;
        margin: 5px 0;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 212px; /* Adjust width as needed */
        resize: vertical; /* Allow vertical resizing */
    }

        .form-row textarea:focus {
            outline: none;
            border-color: #007bff; /* Change color on focus as needed */
        }

    button {
        background-color: #008CBA; /* Blue background */
        border: none; /* No border */
        color: white; /* White text */
        padding: 10px 20px; /* Padding */
        text-align: center; /* Center text */
        text-decoration: none; /* No underline */
        display: inline-block; /* Display as inline block */
        font-size: 16px; /* Font size */
        margin: 10px; /* Margin */
        transition-duration: 0.4s; /* Animation duration */
        cursor: pointer; /* Cursor pointer */
        border-radius: 5px; /* Rounded corners */
        height: 40px; /* Set height */
        width: 150px; /* Set width */
    }

        /* Change the background color on hover */
        button:hover {
            background-color: #005f75; /* Darker blue */
            color: blue;
        }
</style>

@if (!Request.Browser.IsMobileDevice)
{
