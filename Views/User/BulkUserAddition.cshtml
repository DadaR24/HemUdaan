
@{
    ViewBag.Title = "Bulk User Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<style>
    .container {
        max-width: 1000px;
        margin: 2px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="container">
    <div class="card text-center">
        <div class="card-header">
            <h4 class="heading-primary text-uppercase mb-sm"> <i class="fa fa-user"></i> Bulk User Registration</h4>

        </div>
        <div class="card-body">
            <div class="bglight-student p-xs">
                <div class="container mt-sm pt-sm  pb-xlg mb-xlg ">
                    <div class="col-md-12">
                        <div class="featured-boxes">
                            <div class="row">
                                <div class="col-sm-8 zindex99 col-sm-offset-2">
                                    <div class="featured-box featured-box-primary align-left mt-xs " style="height: auto;">
                                        <div class="box-content box-content-light">


                                            <form method="post" id="registrationForm" action="@Url.Action("UploadExcel", "User")" enctype="multipart/form-data">
                                                <div class="row mt-md">
                                                    <div class="col-md-12">
                                                        <input type="file" id="ExcelFile" name="ExcelFile" class="form-control" required />
                                                    </div>
                                                </div>
                                                <div class="row mt-md">
                                                    <div class="col-md-12">
                                                        <img src="~/Content/img/bulkregistrationlayout.png"  class="img-fluid" />
                                                        <label class="text-danger">* Please Follow Above Excel Structure And Use Sheet1 Only</label>
                                                    </div>
                                                    <div class="col-md-12 mt-md">
                                                        <label class="text-danger">Download Excel Structure From Below</label>
                                                        <a href="~/Content/attachments/Sample-Hem-Virtue-Teacher-Registration.xlsx" download>Click Here</a>
                                                    </div>
                                                </div>
                                                <div class="row mt-md">
                                                </div>
                                                @if (ViewData["ErrorMessage"] != null)
                                                {
                                                    <script>

                                            Swal.fire({
                                                title: "Error", // Optional title
                                                text: "@ViewData["ErrorMessage"]",
                                                icon: 'info' // Optional icon (e.g., 'success', 'error')
                                            });
                                                @*showmessage("Error", "@ViewData["ErrorMessage"]");*@
                                                    </script>
                                                    <div class="alert alert-danger">
                                                        @ViewData["ErrorMessage"]
                                                    </div>
                                                }
                                                @if (ViewData["Success"] != null)
                                                {
                                                    <script>

                                     Swal.fire({
                                         title: "Success", // Optional title
                                                text: "@ViewData["Success"]",
                                         icon: 'Success' // Optional icon (e.g., 'success', 'error')
                                            });
                                                    </script>
                                                    <div class="alert alert-success">
                                                        @ViewData["Success"]
                                                    </div>
                                                }

                                            </form>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <input type="button" value="Save" id="btnUploadExcel" onclick="registerUser()" alis="Save" class="btn btnsave  btn-primary btn-lg pl-xlg pr-xlg">


        </div>
    </div>
</div>
    <div id="message-popup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="messagePopupLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="messagePopupLabel">Message</h5>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <h5 class="modal-title" id="messagePopupLabel">Error</h5>
                    }
                    @if (ViewData["Success"] != null)
                    {
                        <h5 class="modal-title" id="messagePopupLabel">Success</h5>
                    }
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <p>
                            @ViewData["ErrorMessage"]
                        </p>
                    }
                    @if (ViewData["Success"] != null)
                    {
                        <p>
                            @ViewData["Success"]
                        </p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                    }
                    @if (ViewData["Success"] != null)
                    {
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    }
                </div>
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    <script type="text/javascript">


        function showmessage(messagetype, body) {
            debugger
            $("#message-popup").modal('show');
            // Show the popup on load (optional)

            // Alternatively, trigger the popup based on an event

            Swal.fire({
                title: messagetype, // Optional title
                text: body,
                icon: 'info' // Optional icon (e.g., 'success', 'error')
            });

        }
        function registerUser() {
            // Perform form validation here if needed
            document.getElementById("registrationForm").submit(); // Submit the form
        }

    </script>

